import csv
import os

FILENAME = "budget_records.csv"

if not os.path.exists(FILENAME):
    with open(FILENAME, mode="w", newline="") as file:
        writer = csv.writer(file)
        writer.writerow(["Type", "Amount"])  # Headers

def add_record(record_type, amount):
    with open(FILENAME, mode="a", newline="") as file:
        writer = csv.writer(file)
        writer.writerow([record_type, amount])

def get_summary():
    income = 0
    expenses = 0
    with open(FILENAME, mode="r") as file:
        reader = csv.DictReader(file)
        for row in reader:
            try:
                amount = float(row["Amount"])
                if row["Type"].lower() == "income":
                    income += amount
                elif row["Type"].lower() == "expense":
                    expenses += amount
            except ValueError:
                continue
    return income, expenses, income - expenses

while True:
    print("\n--- Income & Expense Tracker ---")
    print("1. Add Income")
    print("2. Add Expense")
    print("3. Show Summary")
    print("4. Exit")

    choice = input("Enter your choice: ")

    if choice == "1":
        try:
            amount = float(input("Enter income amount: "))
            add_record("Income", amount)
            print("Income added!")
        except ValueError:
            print("Invalid amount! Please enter a number.")

    elif choice == "2":
        try:
            amount = float(input("Enter expense amount: "))
            add_record("Expense", amount)
            print("Expense added!")
        except ValueError:
            print("Invalid amount! Please enter a number.")

    elif choice == "3":
        income, expenses, balance = get_summary()
        print("\n--- Financial Summary ---")
        print(f"Total Income:   {income:.2f}")
        print(f"Total Expenses: {expenses:.2f}")
        print(f"Net Balance:    {balance:.2f}")

    elif choice == "4":
        print("Exiting... Goodbye!")
        break

    else:
        print("Invalid choice! Please try again.")
